<body class="bg-dark dk">
    <div class="bg-dark dk" id="wrap">
        <div id="top">

            <nav class="navbar navbar-inverse navbar-static-top">
                <div class="container-fluid">

                    <header class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                        <a class="navbar-brand">
                            <img src="assets/img/logohk.png" height="50px;">
                        </a>
                        <a href="/" class="navbar-brand">
                            <img src="assets/img/logo.png" alt="">
                        </a>
                    </header>
                    <div class="topnav">
                        <div class="btn-group">
                            <a href="/user/logout" data-toggle="tooltip" data-original-title="Logout" data-placement="bottom" class="btn btn-metis-1 btn-sm">
                                <i class="fa fa-power-off"></i>
                            </a>
                        </div>
                        <div class="btn-group">
                            <a data-placement="bottom" data-original-title="Show / Hide Left" data-toggle="tooltip" class="btn btn-primary btn-sm toggle-left" id="menu-toggle">
                                <i class="fa fa-bars"></i>
                            </a>
                        </div>
                        <div class="btn-group">
                            <img class="img-fluid" src="assets/img/logo_nk.jpg" width="60px;">
                        </div>
                    </div>
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                    </div>
                </div>
            </nav>
            <header class="head">
                <div class="main-bar">
                    <h3>
                        <i class="fa fa-dashboard">
                        </i>&nbsp; Dashboard</h3>
                </div>
            </header>
        </div>
        <div id="left">
            <div class="media user-media bg-dark dker">
                <div class="user-media-toggleHover">
                    <span class="fa fa-user"></span>
                </div>
                <div class="user-wrapper bg-dark">
                    <a class="user-link">
                        <img class="media-object img-thumbnail user-img" alt="User Picture" src="assets/img/user.gif">
                    </a>
                    <div class="media-body">
                        <h5 class="media-heading">
                            <%= User.User %>
                        </h5>
                        <ul class="list-unstyled user-info">
                            <li>
                                <p href="">
                                    <%= User.Position %>
                                </p>
                            </li>
                            <li>
                                <a href="/TK/SETTING">Thay đổi mật khẩu</a>
                                <br>
                                <br>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <ul id="menu" class="bg-drak dker">
                <li class="nav-header">Menu</li>
                <li class="nav-divider"></li>
                <li class="active">
                    <a href="/dashboard">
                        <i class="fa fa-dashboard"></i>
                        <span class="link-title">&nbsp;Dashboard</span>
                    </a>
                </li>
                <li class="">
                    <a href="/DH">
                        <i class="fa fa-table"></i>
                        <span class="link-title">Quản lý đơn hàng</span>
                    </a>
                </li>
                <li class="">
                    <a href="/Report">
                        <i class="fa fa-building "></i>
                        <span class="link-title">Xuất báo cáo</span>
                    </a>
                </li>
                <li class="">
                    <a href="javascript:;">
                        <i class="fa fa-gears"></i>
                        <span class="link-title">Quản lý</span>
                        <span class="fa arrow"></span>
                    </a>
                    <ul>
                        <li>
                            <a href="/TX">
                                <i class="fa fa-angle-right"></i>&nbsp; Tài xế </a>
                        </li>
                        <li>
                            <a href="/XB">
                                <i class="fa fa-angle-right"></i>&nbsp; Xe bồn </a>
                        </li>
                        <li>
                            <a href="/KH">
                                <i class="fa fa-angle-right"></i>&nbsp; Khách hàng </a>
                        </li>
                        <% if(User.Position == "Quản Lý"){%>
                            <li>
                                <a href="/TK">
                                    <i class="fa fa-angle-right"></i>&nbsp; Tài khoản </a>
                            </li>
                            <%}%>
                    </ul>
                </li>
                <li class="nav-divider"></li>
                <li>
                    <a href="/user/logout">
                        <i class="fa fa-sign-in"></i>
                        <span class="link-title">
                            Login Page
                        </span>
                    </a>
                </li>
            </ul>
        </div>
        <div id="content">
            <div class="outer">
                <div class="inner bg-light lter">
                    <div class="text-center">
                        <a class="quick-btn" href="#">
                            <i class="fa fa-pause fa-2x"></i>
                            <span>Chờ duyệt</span>
                            <span class="label label-danger" id="waitting"></span>
                        </a>
                        <a class="quick-btn" href="#">
                            <i class="fa fa-check fa-2x"></i>
                            <span>Đã duyệt</span>
                            <span class="label label-default" id="checked"></span>
                        </a>
                        <a class="quick-btn" href="#">
                            <i class="fa fa-external-link fa-2x"></i>
                            <span>Đang xuất</span>
                            <span class="label label-warning" id="running"></span>
                        </a>
                        <a class="quick-btn" href="#">
                            <i class="fa fa-thumbs-up fa-2x"></i>
                            <span>Hoàn thành</span>
                            <span class="label label-success" id="success"></span>
                        </a>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="box">
                                <header>
                                    <h5>Tổng lượng dầu đã xuất</h5>
                                </header>
                                <canvas id="myChart"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="box">
                                <header>
                                    <h5>Số lượng đơn hàng</h5>
                                </header>
                                <canvas id="myChart1"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="box">
                                <header>
                                    <h5>Lịch xuất hàng</h5>
                                </header>
                                <div id="calendar_content" class="body">
                                    <div id='calendar'></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="Footer bg-dark dker">
